server {
    listen 443 ssl;
    server_name {{ domain_name }};

    ssl_certificate {{ nginx_ssl_dir }}/example.com.crt;
    ssl_certificate_key {{ nginx_ssl_dir }}/example.com.key;

    location /grafana/ {
        proxy_pass http://localhost:3000/;
        proxy_set_header Host $host;
    }

    location /loki/ {
        proxy_pass http://localhost:3100/;
        proxy_set_header Host $host;
    }
}

